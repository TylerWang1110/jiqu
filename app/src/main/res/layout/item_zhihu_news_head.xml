<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/zhihu_news_head_hight"
    android:orientation="vertical">

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/iv_zhihunews_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tv_zhihunews_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/zhihu_news_head_text_padding"
        android:textColor="@android:color/white"
        android:layout_marginBottom="@dimen/zhihu_news_head_text_marginBottom"
        android:textSize="@dimen/zhihu_news_head_text_size"/>

</RelativeLayout>